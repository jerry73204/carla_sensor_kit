<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:macro name="sensor_kit_macro" params="parent x y z roll pitch yaw">
    <xacro:include filename="$(find vls_description)/urdf/VLS-128.urdf.xacro"/>
    <xacro:include filename="$(find camera_description)/urdf/monocular_camera.xacro"/>
    <xacro:include filename="$(find imu_description)/urdf/imu.xacro"/>

    <xacro:arg name="gpu" default="false"/>
    <xacro:arg name="config_dir" default="$(find {{ sensor_kit_name }}_description)/config"/>

    <xacro:property name="sensor_kit_base_link" default="sensor_kit_base_link"/>

    <joint name="${sensor_kit_base_link}_joint" type="fixed">
      <origin rpy="${roll} ${pitch} ${yaw}" xyz="${x} ${y} ${z}"/>
      <parent link="${parent}"/>
      <child link="${sensor_kit_base_link}"/>
    </joint>
    <link name="${sensor_kit_base_link}">
      <origin rpy="0 0 0" xyz="0 0 0"/>
    </link>

    <!-- sensor -->
    <xacro:property name="calibration" value="${xacro.load_yaml('$(arg config_dir)/sensor_kit_calibration.yaml')}"/>

{%- if 'lidar' in sensors %}
    <!-- lidar -->
{%- for lidar in sensors.lidar %}
    <xacro:VLS-128 parent="sensor_kit_base_link" name="{{ lidar.name }}" topic="/points_raw" hz="{{ lidar.rotation_frequency | default(10) }}" samples="{{ lidar.points_per_second // (lidar.rotation_frequency | default(10)) // 1000 | default(220) }}" gpu="$(arg gpu)">
      <origin
        xyz="${calibration['sensor_kit_base_link']['{{ lidar.frame_id }}']['x']}
             ${calibration['sensor_kit_base_link']['{{ lidar.frame_id }}']['y']}
             ${calibration['sensor_kit_base_link']['{{ lidar.frame_id }}']['z']}"
        rpy="${calibration['sensor_kit_base_link']['{{ lidar.frame_id }}']['roll']}
             ${calibration['sensor_kit_base_link']['{{ lidar.frame_id }}']['pitch']}
             ${calibration['sensor_kit_base_link']['{{ lidar.frame_id }}']['yaw']}"
      />
    </xacro:VLS-128>
{%- endfor %}
{%- endif %}

{%- if 'camera' in sensors %}
    <!-- cameras -->
{%- for camera in sensors.camera %}
    <xacro:monocular_camera_macro
      name="{{ camera.name }}/camera"
      parent="sensor_kit_base_link"
      namespace=""
      x="${calibration['sensor_kit_base_link']['{{ camera.frame_id }}']['x']}"
      y="${calibration['sensor_kit_base_link']['{{ camera.frame_id }}']['y']}"
      z="${calibration['sensor_kit_base_link']['{{ camera.frame_id }}']['z']}"
      roll="${calibration['sensor_kit_base_link']['{{ camera.frame_id }}']['roll']}"
      pitch="${calibration['sensor_kit_base_link']['{{ camera.frame_id }}']['pitch']}"
      yaw="${calibration['sensor_kit_base_link']['{{ camera.frame_id }}']['yaw']}"
      fps="{{ camera.fps | default(30) }}"
      width="{{ camera.image_size_x | default(800) }}"
      height="{{ camera.image_size_y | default(600) }}"
      fov="{{ camera.fov | default(1.3) }}"
    />
{%- endfor %}
{%- endif %}

{%- if 'imu' in sensors %}
    <!-- imu -->
{%- for imu in sensors.imu %}
    <xacro:imu_macro
      name="{{ imu.name }}"
      parent="sensor_kit_base_link"
      namespace=""
      x="${calibration['sensor_kit_base_link']['{{ imu.frame_id }}']['x']}"
      y="${calibration['sensor_kit_base_link']['{{ imu.frame_id }}']['y']}"
      z="${calibration['sensor_kit_base_link']['{{ imu.frame_id }}']['z']}"
      roll="${calibration['sensor_kit_base_link']['{{ imu.frame_id }}']['roll']}"
      pitch="${calibration['sensor_kit_base_link']['{{ imu.frame_id }}']['pitch']}"
      yaw="${calibration['sensor_kit_base_link']['{{ imu.frame_id }}']['yaw']}"
      fps="{{ imu.sensor_tick | default(100) }}"
    />
{%- endfor %}
{%- endif %}

{%- if 'gnss' in sensors %}
    <!-- gnss -->
{%- for gnss in sensors.gnss %}
    <link name="{{ gnss.frame_id }}">
      <origin rpy="0 0 0" xyz="0 0 0"/>
    </link>
    <joint name="{{ gnss.frame_id }}_joint" type="fixed">
      <origin
        xyz="${calibration['sensor_kit_base_link']['{{ gnss.frame_id }}']['x']}
             ${calibration['sensor_kit_base_link']['{{ gnss.frame_id }}']['y']}
             ${calibration['sensor_kit_base_link']['{{ gnss.frame_id }}']['z']}"
        rpy="${calibration['sensor_kit_base_link']['{{ gnss.frame_id }}']['roll']}
             ${calibration['sensor_kit_base_link']['{{ gnss.frame_id }}']['pitch']}
             ${calibration['sensor_kit_base_link']['{{ gnss.frame_id }}']['yaw']}"
      />
      <parent link="sensor_kit_base_link"/>
      <child link="{{ gnss.frame_id }}"/>
    </joint>
{%- endfor %}
{%- endif %}

  </xacro:macro>
</robot>