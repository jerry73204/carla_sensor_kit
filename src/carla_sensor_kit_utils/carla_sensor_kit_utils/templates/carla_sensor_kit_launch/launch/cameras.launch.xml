<launch>
  <arg name="launch_driver" default="true"/>
  <arg name="vehicle_id" default="$(env VEHICLE_ID default)"/>

  <group>
    <push-ros-namespace namespace="camera"/>

    <!-- Front Camera -->
    <group>
      <push-ros-namespace namespace="front"/>
      <node pkg="topic_tools" exec="relay" name="camera_front_image_relay">
        <param name="input_topic" value="/carla/$(var vehicle_id)/camera_front/image"/>
        <param name="output_topic" value="image_raw"/>
      </node>
      <node pkg="topic_tools" exec="relay" name="camera_front_info_relay">
        <param name="input_topic" value="/carla/$(var vehicle_id)/camera_front/camera_info"/>
        <param name="output_topic" value="camera_info"/>
      </node>
    </group>

    <!-- Back Camera -->
    <group>
      <push-ros-namespace namespace="back"/>
      <node pkg="topic_tools" exec="relay" name="camera_back_image_relay">
        <param name="input_topic" value="/carla/$(var vehicle_id)/camera_back/image"/>
        <param name="output_topic" value="image_raw"/>
      </node>
      <node pkg="topic_tools" exec="relay" name="camera_back_info_relay">
        <param name="input_topic" value="/carla/$(var vehicle_id)/camera_back/camera_info"/>
        <param name="output_topic" value="camera_info"/>
      </node>
    </group>

    <!-- Left Camera -->
    <group>
      <push-ros-namespace namespace="left"/>
      <node pkg="topic_tools" exec="relay" name="camera_left_image_relay">
        <param name="input_topic" value="/carla/$(var vehicle_id)/camera_left/image"/>
        <param name="output_topic" value="image_raw"/>
      </node>
      <node pkg="topic_tools" exec="relay" name="camera_left_info_relay">
        <param name="input_topic" value="/carla/$(var vehicle_id)/camera_left/camera_info"/>
        <param name="output_topic" value="camera_info"/>
      </node>
    </group>

    <!-- Right Camera -->
    <group>
      <push-ros-namespace namespace="right"/>
      <node pkg="topic_tools" exec="relay" name="camera_right_image_relay">
        <param name="input_topic" value="/carla/$(var vehicle_id)/camera_right/image"/>
        <param name="output_topic" value="image_raw"/>
      </node>
      <node pkg="topic_tools" exec="relay" name="camera_right_info_relay">
        <param name="input_topic" value="/carla/$(var vehicle_id)/camera_right/camera_info"/>
        <param name="output_topic" value="camera_info"/>
      </node>
    </group>
  </group>
</launch>